<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/winch_out_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="100dp"
        android:background="#000"
        android:textColor="@color/mintyGreen"
        android:text="OUT">
    </Button>

    <Button
        android:id="@+id/winch_in_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="100dp"
        android:background="#000"
        android:text="IN"
        android:textColor="@color/pinkishRed" />

    <Button
        android:id="@+id/winch_connect_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/darkMintyGreen"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:text="CONNECT">
    </Button>



</LinearLayout>